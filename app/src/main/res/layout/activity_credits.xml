<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntranceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:gravity="center"
        android:layout_centerHorizontal="true">



        <TextView
            android:id="@+id/gameTitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Created by: "
            android:layout_centerHorizontal="true"
            android:textSize="50dp"
            android:layout_marginTop="80dp"
            />


        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignTop="@+id/credits"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:background="@drawable/venkologo" />

        <TextView
            android:id="@+id/credits"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_alignTop="@+id/gameTitle"
            android:layout_marginTop="70dp"
            android:textColor="#000"
            android:text="Venulet Jan 235542,\nKowolik Dawid 235697\nProwadzący: dr.inż. Mariusz Topolski"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            />



        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:text="Back to Menu"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:onClick="backToMenu"
            />

    </RelativeLayout>


</RelativeLayout>